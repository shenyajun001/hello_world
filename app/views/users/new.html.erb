<% provide(:title,'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class = "col-md-6 col-md-offset-3">
    <%= form_for(@user,url:signup_path) do |foobar| %>
      <%= render 'shared/error_messages' %>
      <%= foobar.label :name %>
      <%= foobar.text_field :name %>

      <%= foobar.label :email %>
      <%= foobar.text_field :email %>
  
      <%= foobar.label :password %>
      <%= foobar.password_field :password %>

      <%= foobar.label :password_confirmation,"Confirmation" %>
      <%= foobar.password_field :password_confirmation %>

      <%= foobar.submit "Create my accout",class:"btn btn-primary" %>
    <% end %>
  </div>
</div>
